{{#if posts.length}}
  <section>
    <h2>Your Posts</h2>
    <ul>
      {{#each posts}}
        <li>
          <article class="post">
            <div class="title">
              <a href="/post/{{id}}">{{title}}</a>
            </div>
            <div>
              {{created_at}}
            </div>
          </article>
        </li>
      {{/each}}
    </ul>
    <div>
      <a href="/dashboard/new-post">+ New Post</a>
    </div>
  </section>
{{/if}}